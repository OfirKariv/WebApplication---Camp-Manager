<div>
    <img src="https://thefootballartist.files.wordpress.com/2015/05/w5.jpg?w=545" id="welcomeImg">
    <aside><h1 id="welcomeMsg"> Welcome To DO Community </h1></aside>
</div>

<div class="container" id="loginArea">
    <div class="row" id="firstRow">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6">
                            <a href="#" class="active" id="login-form-link">Login</a>
                        </div>
                        <div class="col-xs-6">
                            <a href="#" id="register-form-link">Register</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">
                            <div id="loginForm">
                                @using (Html.BeginForm("Login", "Player", FormMethod.Post))
                                {
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @type = "text", @name = "username", @id = "username", @tabindex = "1", @class="form-control", @placeholder="Username", @value="" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    <!--<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">-->
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @name = "password" ,@id = "password", @tabindex = "2", @class="form-control", @placeholder="Password",@value="" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    <!--<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">-->
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-login" value="Log In">
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-lg-12">
                                        </div>
                                    </div>
                                </div>
                                }
                            </div>                            
                            <div id="regiForm">
                            @using (Html.BeginForm("AddOrEdit", "Player", FormMethod.Post))
                            {
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                <div class="form-group">
                                    @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @type = "text", @name = "username", @id = "username", @tabindex = "1", @class = "form-control", @placeholder = "Username", @value = "" } })
                                    @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                                    <!--<input type="text" name="username" id="username" tabindex="1" class="form-control" placeholder="Username" value="">-->
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @type = "password", @name = "password", @id = "password", @tabindex = "2", @class = "form-control", @placeholder = "Password", @value = "" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                    <!--<input type="password" name="password" id="password" tabindex="2" class="form-control" placeholder="Password">-->
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @type = "password", @name = "confirmpassword", @id = "confirmpassword", @tabindex = "2", @class = "form-control", @value = "", @placeholder = "Confirm Password" } })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                    <!--<input type="text" name="team" id="team" tabindex="1" class="form-control" placeholder="Team" value="">-->
                                </div>

                                <div class="form-group">
                                    @Html.EditorFor(model => model.Team, new { htmlAttributes = new { @type = "text", @name = "team", @id = "team", @tabindex = "1", @class = "form-control", @placeholder = "Team", @value = "" } })
                                    @Html.ValidationMessageFor(model => model.Team, "", new { @class = "text-danger" })
                                    <!--<input type="text" name="team" id="team" tabindex="1" class="form-control" placeholder="Team" value="">-->
                                </div>
                                <div class="form-group">
                                 @Html.DropDownListFor(model => model.Position, new SelectList(Enum.GetValues(typeof(ProjectDoc.Models.Positions))), "Select Position", new { @class = "form-control", @value = "" })
                                   <!-- Html.EditorFor(model => model.Position, new { htmlAttributes = new { type = "text", name = "position", id = "position", tabindex = "1", class = "form-control", placeholder = "Position Playing",value = "" } })-->
                                    @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
                                    <!--<input type="text" name="position" id="position" tabindex="1" class="form-control" placeholder="Position Playing" value="">-->
                                </div>
                                <div class="form-group">
                                    @Html.EditorFor(model => model.Age, new { htmlAttributes = new { @type = "slide", @max = "25", @min = "10", @name = "age", @id = "age", @tabindex = "1", @class = "form-control", @placeholder = "Age", @value = "" } })
                                    @Html.ValidationMessageFor(model => model.Age, "", new { @class = "text-danger" })
                                    <!--<input type="text" name="age" id="age" tabindex="1" class="form-control" placeholder="Age" value="">-->
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-sm-6 col-sm-offset-3">
                                            <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-register" value="Register Now">
                                        </div>
                                    </div>
                                </div>
                            }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<h1>@ViewBag.Message</h1>



@Scripts.Render("https://code.jquery.com/jquery-3.2.1.js")
@Scripts.Render("~/Scripts/layout.js")